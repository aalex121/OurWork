@using OurWork.Models
@model IEnumerable<OurWork.Models.JobAppliance>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="p-3">
        <h2>My appliances</h2>
    </div>
    <div class="p-4">
        @Html.ActionLink("Add Appliance", "NewAppliance", "Appliance",
                routeValues: null,
                htmlAttributes: new { @class = "btn btn-success btn-large" })
    </div>
</div>


@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Name
                    
                </th>
                <th>
                    Comment
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (JobAppliance item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Comment
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    
    
}

